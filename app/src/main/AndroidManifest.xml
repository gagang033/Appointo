<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lenovo.example.appointo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AdminAddSlots"
            android:label="Add Slots"
            android:parentActivityName=".AdminSelectDate"></activity>
        <activity android:name=".AdminSelectDate"
            android:label="Select date"
            android:parentActivityName=".AdminHome"/>
        <activity
            android:name=".VerifyEmailActivity"
            android:label="Login" />
        <activity
            android:name=".UserHome"
            android:label="Home" />
        <activity
            android:name=".AdminHome"
            android:label="Slots" />
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>